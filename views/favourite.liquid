    <div>
        <span><img src="/assets/Group.svg" alt="">Vriend</span>
        <span><img src="/assets/koken.svg" alt="">Kookliefhebber</span>
        <span><img src="/assets/wolkje.svg" alt="">Dromer</span>
        <span><img src="/assets/games.svg" alt="">Spelliefhebber</span>
    </div>

    <div>
        <p>Questa lista è privata</p>
        <button><img src="/assets/upload.svg" alt=""></button>
    </div>

    <ul>
        {% for product in favourites %}
        {% include 'partials/card.liquid' with item, size: 'medium', item: product %}
        {% endfor %}
    </ul>


    <article class="more-products">
        {% for item in items %}
        {% include 'partials/card.liquid' with item, size: 'xl' %}
        {% endfor %}
    </article>
</main>


